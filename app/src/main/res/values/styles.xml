<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Launch">
        <item name="android:background">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppLoginTheme" parent="Theme.AccountKit">
        <item name="com_accountkit_status_bar_color">@color/status_bar_color_translucent</item>
    </style>

    <style name="AppTheme.ThemeTransparentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar_color_translucent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppThemeWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar_color_translucent</item>
        <item name="actionBarStyle">@style/ActionBarTheme</item>
        <item name="toolbarStyle">@style/WhiteToolbarTheme</item>
        <item name="actionMenuTextColor">@color/text_view_selectable_purple</item>
        <item name="actionMenuTextAppearance">@style/menu_text_style</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_black</item>
    </style>

    <style name="AppThemeBlack" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar_color_translucent</item>
        <item name="actionBarStyle">@style/ActionBarBlackTheme</item>
        <item name="toolbarStyle">@style/BlackToolbarTheme</item>
        <item name="actionMenuTextColor">@color/text_view_selectable_purple</item>
        <item name="actionMenuTextAppearance">@style/menu_text_style</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_white</item>
    </style>

    <style name="ActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorWhite</item>
        <item name="background">@color/colorWhite</item>
    </style>


    <style name="ActionBarBlackTheme" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="WhiteToolbarTheme" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/text_color_main</item>
        <item name="collapseIcon">@drawable/ic_back_black</item>
    </style>

    <style name="BlackToolbarTheme" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="collapseIcon">@drawable/ic_back_white</item>
    </style>

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/indentation_16</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TxtStyleTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_main</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TxtStyleMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_main</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TxtStyleSecondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TxtStyleSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="StyleEditText" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/text_color_main</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="AppTheme.ThemeEditTextAppearance" parent="AppTheme">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppTheme.StyleEditText">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="StyleInputLayout" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="StyleInputLayoutError" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/stroke_error_color_login</item>
    </style>

    <style name="AppTheme.StyleEditTextAppearanceTransparent" parent="AppTheme">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <!-- Used for the background -->
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="WaypointsLocationItemStyle" parent="Theme.AppCompat">
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginStart">11dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blacker</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">22dp</item>
        <item name="android:layout_marginTop">7dp</item>
    </style>

    <style name="SearchTextSpan">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchViewOnWhiteTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/white_30</item>
        <item name="android:fontFamily">@string/medium</item>
        <item name="android:editTextColor">@color/colorWhite</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="SearchViewOnBlackTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/white_30</item>
        <item name="android:fontFamily">@string/medium</item>
        <item name="android:editTextColor">@color/colorWhite</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:enabled">false</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="BottomButtonDark" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:enabled">false</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_selector_dark_purple</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text_color_main</item>
        <item name="android:textColorPrimaryInverse">@color/colorWhite</item>
        <item name="android:textColorSecondaryInverse">@color/colorWhite</item>
    </style>

    <style name="TimePickerWidgetStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeInputLayoutCounter" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/stroke_error_color_login</item>
    </style>

    <style name="AppTheme.FuullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
    </style>

</resources>
