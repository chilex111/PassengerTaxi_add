<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screen.cabinet.support.SupportActivity">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtAppeal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="@dimen/indentation_10"
            android:textSize="@dimen/text_size_16"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right"
            android:background="@android:color/transparent"
            android:text="@string/make_an_appeal"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <TextView
            android:id="@+id/txtComplaint"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="@dimen/indentation_10"
            android:textSize="@dimen/text_size_16"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right"
            android:background="@android:color/transparent"
            android:text="@string/complaint"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

        <TextView
            android:id="@+id/txtRefund"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="@dimen/indentation_10"
            android:textSize="@dimen/text_size_16"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right"
            android:background="@android:color/transparent"
            android:text="@string/refund"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>

    </LinearLayout>

    <include
        android:id="@+id/recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        layout="@layout/activity_list"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>