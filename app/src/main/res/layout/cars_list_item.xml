<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:elevation="@dimen/cardview_default_elevation"
	android:layout_marginTop="5dp"
	android:layout_marginLeft="8dp"
	android:layout_marginRight="8dp"
	android:layout_marginBottom="5dp"
	android:layout_height="wrap_content">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/carPhoto2"
			android:layout_width="84dp"
			android:layout_height="84dp"
			android:layout_gravity="center"
			android:layout_marginStart="16dp"
			android:layout_marginTop="26dp"
			android:background="@drawable/photo_dummy_cabinet"
			android:src="@drawable/photo"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:contentDescription="@string/app_name" />

		<TextView
			android:id="@+id/carMakeAndModelTv1"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="16dp"
			android:fontFamily="sans-serif-medium"
			android:letterSpacing="-0.02"
			android:text="Alfa Romeo 159 Sportwagon"
			android:textColor="@color/text_color_main"
			android:textSize="16sp"
			android:textStyle="normal"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/carPhoto2"
			app:layout_constraintTop_toTopOf="parent"/>

		<TextView
			android:id="@+id/carPlateNumberTv1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"
			android:layout_marginTop="8dp"
			android:background="@color/background_plate_number"
			android:fontFamily="sans-serif"
			android:letterSpacing="-0.01"
			android:paddingLeft="7dp"
			android:paddingTop="5dp"
			android:paddingRight="7dp"
			android:paddingBottom="5dp"
			android:text="ABC -123 DE"
			android:textColor="@color/text_color_main"
			android:textSize="12sp"
			android:textStyle="normal"
			app:layout_constraintStart_toEndOf="@+id/carPhoto2"
			app:layout_constraintTop_toBottomOf="@+id/carMakeAndModelTv1"/>

		<TextView
			android:id="@+id/yearOfManufacture1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"
			android:layout_marginTop="13dp"
			android:fontFamily="sans-serif"
			android:letterSpacing="-0.02"
			android:textColor="@color/text_color_main"
			android:textSize="14sp"
			android:textStyle="normal"
			app:layout_constraintStart_toEndOf="@+id/carPhoto2"
			app:layout_constraintTop_toBottomOf="@+id/carPlateNumberTv1"
			android:text="No driver"/>

		<TextView
			android:id="@+id/location_tv1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="4dp"
			android:layout_marginTop="11dp"
			android:fontFamily="sans-serif"
			android:letterSpacing="-0.02"
			android:textColor="@color/light_grey_blue"
			android:textSize="12sp"
			android:textStyle="normal"
			app:layout_constraintStart_toEndOf="@+id/location_iv"
			app:layout_constraintTop_toBottomOf="@+id/yearOfManufacture1"
			android:text="location can`t be detected"/>

		<ImageView
			android:id="@+id/location_iv"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_marginStart="20dp"
			android:layout_marginTop="9dp"
			app:layout_constraintStart_toEndOf="@+id/carPhoto2"
			app:layout_constraintTop_toBottomOf="@+id/yearOfManufacture1"
			app:srcCompat="@drawable/ic_pin_light_copy"/>


		<ImageView
			android:id="@+id/imageView6"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="30dp"
			android:layout_marginTop="23dp"
			android:layout_marginEnd="30dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/location_tv1"
			app:srcCompat="@drawable/divider_long"/>


		<ImageView
			android:id="@+id/imageView7"
			android:layout_width="0dp"

			android:layout_height="wrap_content"
			android:layout_marginStart="29dp"
			android:layout_marginTop="20dp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/imageView6"
			app:srcCompat="@drawable/ic_cash"/>

		<TextView
			android:id="@+id/textView12"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="26dp"
			android:layout_marginTop="23dp"
			android:fontFamily="sans-serif-medium"
			android:letterSpacing="-0.01"
			android:text="Money earned:"
			android:textColor="@color/text_color_main"
			android:textSize="16sp"
			android:textStyle="normal"
			app:layout_constraintStart_toEndOf="@+id/imageView7"
			app:layout_constraintTop_toBottomOf="@+id/imageView6"/>

		<TextView
			android:id="@+id/money_earned_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="30dp"
			android:layout_marginTop="22dp"
			android:fontFamily="sans-serif"
			android:letterSpacing="-0.01"
			android:textColor="@color/text_color_main"
			android:textSize="14sp"
			android:textStyle="normal"
			app:layout_constraintStart_toEndOf="@+id/textView12"
			app:layout_constraintTop_toBottomOf="@+id/imageView6"
			android:text="â‚¦0"/>


		<ImageView
			android:id="@+id/imageView8"
			android:layout_width="0dp"

			android:layout_height="wrap_content"
			android:layout_marginStart="28dp"
			android:layout_marginTop="20dp"
			android:layout_marginBottom="33dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/imageView7"
			app:srcCompat="@drawable/ic_my_trips_copy"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="26dp"
			android:layout_marginTop="23dp"
			android:fontFamily="sans-serif-medium"
			android:letterSpacing="-0.01"
			android:textColor="@color/text_color_main"
			android:textSize="16sp"
			android:textStyle="normal"
			app:layout_constraintStart_toEndOf="@+id/imageView8"
			app:layout_constraintTop_toBottomOf="@+id/imageView7"
			android:text="Trips made:"/>

		<TextView
			android:id="@+id/trips_made_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="23dp"
			android:fontFamily="sans-serif"
			android:letterSpacing="-0.01"
			android:textColor="@color/text_color_main"
			android:textSize="14sp"
			android:textStyle="normal"
			app:layout_constraintStart_toStartOf="@+id/money_earned_tv"
			app:layout_constraintTop_toBottomOf="@+id/imageView7"
			android:text="33"/>


	</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>