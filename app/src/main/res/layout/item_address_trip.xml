<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_pin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="center"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_waypoint_pin"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:src="@drawable/vertical_dots_short"
        app:layout_constraintEnd_toEndOf="@id/iv_pin"
        app:layout_constraintStart_toStartOf="@id/iv_pin"
        app:layout_constraintTop_toBottomOf="@id/iv_pin" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:textColor="@color/text_color_main"
        android:textSize="@dimen/text_size_16"
        android:lines="2"
        android:layout_marginTop="-10dp"
        app:layout_constraintLeft_toRightOf="@id/iv_pin"
        app:layout_constraintRight_toLeftOf="@+id/buttonEdit"
         app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/fab_bg"
        android:background="@color/transparent"
        android:text="@string/btn_edit"
        android:paddingBottom="@dimen/indentation_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</android.support.constraint.ConstraintLayout>
