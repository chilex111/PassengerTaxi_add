<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_pin"
        android:layout_width="@dimen/indentation_20"
        android:layout_height="@dimen/indentation_20"
        android:scaleType="center"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_waypoint_pin"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:src="@drawable/vertical_dots_short"
        app:layout_constraintEnd_toEndOf="@id/iv_pin"
        app:layout_constraintStart_toStartOf="@id/iv_pin"
        app:layout_constraintTop_toBottomOf="@id/iv_pin" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/indentation_24"
        android:layout_marginEnd="@dimen/indentation_10"
        android:textColor="@color/text_color_main"
        android:textSize="@dimen/indentation_16"
        app:layout_constraintLeft_toRightOf="@id/iv_pin"
        app:layout_constraintRight_toLeftOf="@id/timeTextView"
        />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        />


</android.support.constraint.ConstraintLayout>
