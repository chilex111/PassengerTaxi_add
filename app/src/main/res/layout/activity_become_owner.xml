<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".presentation.screen.become_car_owner.BecomeOwnerActivity">

	<TextView
		android:id="@+id/textView7"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="28dp"
		android:layout_marginEnd="16dp"
		android:fontFamily="sans-serif-medium"
		android:lineSpacingExtra="4sp"
		android:textColor="@color/text_color_secondary"
		android:textSize="16sp"
		android:textStyle="normal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:text="@string/text_become_carowner"/>

	<Button
		android:id="@+id/becomeCarOwnerBtn"
		android:layout_width="0dp"
		android:layout_height="36dp"
		android:layout_marginStart="87dp"
		android:layout_marginEnd="87dp"
		android:layout_marginBottom="54dp"
		android:background="@drawable/background_button_corner"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:shadowColor="#59000000"
		android:text="@string/title_car_owner"
		android:textColor="@color/colorWhite"
		android:textSize="14sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"/>

	<ImageView
		android:id="@+id/imageView4"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginBottom="8dp"
		app:layout_constraintBottom_toTopOf="@+id/becomeCarOwnerBtn"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView7"
		app:srcCompat="@drawable/onboarding_1_bonuses"/>
</android.support.constraint.ConstraintLayout>